<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table class="table-condensed">
  <thead>
    <tr>
      <th>Title</th>
      <th>Initials</th>
      <th>Forename</th>
      <th>Surname</th>
      <th>Member category</th>
      <th>Birth date</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.title %></td>
        <td><%= member.initials %></td>
        <td><%= member.forename %></td>
        <td><%= member.surname %></td>
        <td><%= member.member_category.name %></td>
        <td><%= member.birth_date.to_formatted_s(:long) %></td>
        <td><%= member.is_active %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

