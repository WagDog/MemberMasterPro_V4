<p id="notice"><%= notice %></p>

<h1>Listing Members</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Prefix</th>
      <th>Title</th>
      <th>Initials</th>
      <th>Forename</th>
      <th>Surname</th>
      <th>Suffix</th>
      <th>Address</th>
      <th>Telephone number</th>
      <th>Email address</th>
      <th>Member category</th>
      <th>Formal salutation</th>
      <th>Informal salutation</th>
      <th>Male</th>
      <th>Master</th>
      <th>Direct debit</th>
      <th>Birth date</th>
      <th>Join date</th>
      <th>Left date</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.code %></td>
        <td><%= member.prefix %></td>
        <td><%= member.title %></td>
        <td><%= member.initials %></td>
        <td><%= member.forename %></td>
        <td><%= member.surname %></td>
        <td><%= member.suffix %></td>
        <td><%= member.address %></td>
        <td><%= member.telephone_number %></td>
        <td><%= member.email_address %></td>
        <td><%= member.member_category %></td>
        <td><%= member.formal_salutation %></td>
        <td><%= member.informal_salutation %></td>
        <td><%= member.male %></td>
        <td><%= member.master %></td>
        <td><%= member.direct_debit %></td>
        <td><%= member.birth_date %></td>
        <td><%= member.join_date %></td>
        <td><%= member.left_date %></td>
        <td><%= member.is_active %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

