<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div>
    <h3>Welcome to MemberMasterPro</h3>
    <p>
      Perfectly designed and precisely prepared membership management administration software.
    </p>
    <p>Login in. To see it in action.</p>
    <%= form_for(:session, url: sessions_path, html:{class:'m-t', role:'form'}) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, class:'form-control', placeholder:'Username', required:''%>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class:'form-control', placeholder:'Password', required:''%>
        </div>
        <%= f.submit 'Login', class: 'btn btn-primary block full-width m-b' %>
    <%end %>
    <a href="<%= url_for :controller => 'users', :action => 'password_lost' %>"><small>Forgot password?</small></a>
    <p class="m-t"> <small>Wagiesoft &copy; 2017</small> </p>
  </div>
</div>
