<% provide(:title, 'Reset Password') %>
<h1>Reset Password</h1>

<div class ='row'>
  <div class ='span12'>
    <%= form_tag('/password_reset') do | f |%>
        <%= render 'layouts/user_password_reset_error_messages'%>
        <div class='col-md-4 col-md-offset-4'><%= label_tag('Email', 'Email')%></div>
        <div class='col-md-4 col-md-offset-4'><%= text_field_tag('email','')%></div>
        <div class='col-md-2 col-md-offset-5'><%= submit_tag('Reset Password', class: 'btn btn-lg btn-primary')%></div>
    <% end %>
  </div>
</div>